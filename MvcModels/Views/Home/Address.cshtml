@using MvcModels.Models
@model IList<AddressSummary>
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Address</h2>
@if (Model.Count() == 0) {
    using (Html.BeginForm()) {
        for(int i=0; i<3; i++) {
            <fieldset>
                <legend>Adress @(i+1)</legend>
                <div><label>City:</label>@Html.Editor("["+i+"].City")</div>
                <div><label>Country:</label>@Html.Editor("["+i+"].Country")</div>
            </fieldset>
        }
        <button type="submit">Submit</button>
    }
} else {
    foreach(AddressSummary adr in Model) {
        <p>@adr.City, @adr.Country</p>
    }
    @Html.ActionLink("Back", "Address");
}

